<Window x:Class="FehDialogExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FehDialogExtractor"
        mc:Ignorable="d"
        Title="FEH Dialog Extractor" Height="600" Width="900">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="4">
            <StackPanel>
                <Image x:Name="PreviewImage" Stretch="Uniform" Height="480" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                    <Button x:Name="OpenImageButton" Width="110" Margin="0,0,8,0" Click="OpenImageButton_Click">Open Image...</Button>
                    <Button x:Name="ExtractButton" Width="110" Margin="0,0,8,0" Click="ExtractButton_Click">Extract OCR</Button>
                    <Button x:Name="SaveButton" Width="110" Click="SaveButton_Click">Save Text...</Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="4" Margin="8,0,0,0">
            <StackPanel>
                <TextBlock Text="Extracted Text" FontWeight="Bold" Margin="0,0,0,8" />
                <TextBox x:Name="ExtractedTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="520" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
